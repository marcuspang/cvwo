{
  "name": "backend",
  "version": "1.0.0",
  "main": "main.go",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^2.0.15"
  },
  "scripts": {
    "start": "nodemon --exec go run main.go -port :4000 --ext go --delay 2"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "execMap": {
      "go": "go"
    },
    "verbose": true
  }
}